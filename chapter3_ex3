#include<stdio.h>
#include<limits.h>

int main(void)
{
	char ch;
	
	ch = SCHAR_MAX;
	
	printf("char 형의 최대값 : %d\n",ch);
	printf("char 형의 최대값+1 : %d\n",ch+=1);
	
	ch = SCHAR_MIN;
	
	printf("char 형의 최소값 : %d\n",ch);
	printf("char 형의 최소값-1 : %d\n",ch-=1);
			
	return 0;
}
