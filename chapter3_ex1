#include<stdio.h>
 
int main(void) 
{ 
	int num;
	
	printf("정수 10진수로 입력하세요 : ");
	scanf("%d",&num);
	printf("10진수 : %d \n 8진수: %o \n 16진수 : %x\n\n",num,num,num);
	
	printf("정수 16진수로 입력하세요 : ");
	scanf("%x",&num);
	printf("10진수 : %d \n 8진수: %o \n 16진수 : %x\n\n",num,num,num);
	  
	printf("정수 8진수로 입력하세요 : ");
	scanf("%o",&num);
	printf("10진수 : %d \n 8진수: %o \n 16진수 : %x\n\n",num,num,num);
	
	return 0;
}
	  
//chapter3_ex2

#include<stdio.h>

int main(void)
{
	int num;
	
	printf("16진수로 정수를 입력하세요 : ");
	scanf("%x",&num);
	
	printf("%x는 10진수로 %d입니다.\n",num,num);
	
	return 0;
}

