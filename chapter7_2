//chapter7_2

#include<stdio.h>

#define MAX 5

int main(void)
{
	int arr[MAX] ={0};
	int i;
	int sum;
	double average;
	
	printf("%d개의 정수를 입력하세요 : ",MAX);
	for(i=0;i<MAX;i++)
		scanf("%d",&arr[i]);
		
	for (i=0,sum=0;i<MAX;i++)
		sum+=arr[i];
		
	average = (double)sum/(double)MAX;
	printf(" sum : %d\n",sum);	 
	printf(" avg : %.2lf\n",average);
	
	return 0;
}
