#include<stdio.h>
#include<string.h>
#define SIZE 50

int main()
{
	char str[SIZE];
	int len;
	int i;
	
	printf("Enter a string : ");
	gets(str);
	
	len=strlen(str);
	
/*	
	i =0;
	while(str[i++]!='\0');
	len=i-1;
*/
	for(i=len-1;i>=0;i--){
		printf("%c",str[i]);
		}
	printf("\n");
	
	return 0;
}
		
	
