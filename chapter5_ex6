//chapter5_ex6

#include<stdio.h>

int main()
{
	int a;
	int i;
	int sum=0;
	
	scanf(" %d",&a);
	
	for(i=1;i<=a;i+=1)
	{
		sum+=i;
	}
		printf("sum = %d\n",sum);
	
	sum=0;
	i=0;
	while(i<=a)
	{
		if(i%2!=0)
		{
			sum+=i; 
		}
		i++;	
	}		
		printf("2sum = %d\n",sum);
	
	sum=0;
	i=0;
	do 
	{
		if(i%2==0)
		{
			sum +=i;
	 	}
		i++;
	}
	
	while(i<=a);	
		printf("1sum = %d\n",sum);
		
	return 0;
}
	
	
	
	
