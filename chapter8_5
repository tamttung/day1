//chapter8_5
//포인터로서 배열의 사용 
 
#include<stdio.h>

int main()
{
	int arr[5] ={10,20,30,40,50};
	int i;
	
	for(i=0;i<5;i++)
	{
		printf("&arr[%d] = %p ",i,&arr[i]);
		printf("arr + %d = %p\n",i,arr+i);
	}
	
	for(i=0;i<5;i++)
	{
		printf("&arr[%d] = %d ",i,arr[i]);
		printf("*(arr + %d) = %d\n",i,*(arr+i));
	}
	return 0;
}

