//jungol_code550

#include<stdio.h>

int main()
{
	int a,i,j;
	
	scanf("%d",&a);
	
	for(i=a;i>=1;i--){
		for(j=1;j<=a;j++){
			if(j<=i){
				printf("*");
			}
		}
		printf("\n");
	}		
	for(i=a;i>=1;i--){
		for(j=1;j<=a;j++){
			if(j>=i){
				printf("*");
			}
		}
		printf("\n");
	}			
	

	
	printf("\n");
	
	return 0;
}
