//chapter5_ex5

#include<stdio.h>

int main()
{
	int a; 
	
	while(1)
	{
		printf("================\n");
		printf("1.메뉴\n");
		printf("2.메뉴\n");
		printf("3.메뉴\n");
		printf("0.종료\n");
		printf(">>>선택 : ");
		scanf(" %d",&a);
		printf("================\n");
		if (a==0)
		break;
		
			switch(a)
			{
				case 1:
					printf("메뉴 1이 선택되었습니다.\n"); 
					break;
				case 2:
					printf("메뉴 2이 선택되었습니다.\n"); 
					break;
				case 3:
					printf("메뉴 3이 선택되었습니다.\n"); 
					break;
				default:
					printf("1~3사의의 메뉴를 입력하세요.\n");
					break;	
		}
	}
	return 0;
}
	
