//chapter4_ex7

#include<stdio.h>

int main ()
{
	int a,b,c;
	int sum,max,min;
	float avg;
	
	printf("정수 3개를 입력하세요 : ");
	scanf("%d %d %d",&a,&b,&c);
	
	sum = a+b+c;
	avg = (a+b+c)/3.0;
	max = a>b&&a>c?a:(b>c?b:c);
	min = a<b&&a<c?a:(b<c?b:c);			
		  	  
	
	printf("sum = %d\n"
		   "avg = %.2f\n"
		   "max = %d\n"
		   "min = %d\n"	,sum,avg,max,min);
	
	return 0;
}
	 
